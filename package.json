    "electron": "^33.0.2",
    "electron-builder": "^25.1.8",
    "electron-installer-dmg": "^5.0.1",
    "nodemon": "^3.1.7",
    "postcss": "^8.4.47",
    "tailwindcss": "^3.4.14"
  },
  "build": {
    "appId": "dev.zafranudin.pinneddev",
